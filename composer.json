{
    "name": "litepie/integration",
    "description": "A Laravel package for managing API integrations similar to Facebook/Google applications",
    "type": "library",
    "license": "MIT",
    "keywords": ["laravel", "integration", "api", "oauth", "multi-tenant"],
    "authors": [
        {
            "name": "Litepie Team",
            "email": "support@litepie.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0",
        "illuminate/database": "^12.0",
        "illuminate/validation": "^12.0",
        "illuminate/http": "^12.0",
        "illuminate/contracts": "^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Litepie\\Integration\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Litepie\\Integration\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Litepie\\Integration\\IntegrationServiceProvider"
            ],
            "aliases": {
                "Integration": "Litepie\\Integration\\Facades\\Integration"
            }
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
